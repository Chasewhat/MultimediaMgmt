<dx:DXWindow
    x:Class="MultimediaMgmt.View.wndNotify"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Height="150" Width="300" ShowInTaskbar="False" WindowStyle="ToolWindow" 
    ShowIcon="False" Title="{Binding Title}">
    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
        <Image x:Name="ttt" Source="{Binding ImgUri}" Stretch="None" Margin="5"/>
        <TextBlock Width="200" Text="{Binding Message}" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
    </StackPanel>
</dx:DXWindow>
